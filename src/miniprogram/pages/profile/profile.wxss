/* pages/profile/profile.wxss */

page {
  background:#F5F5F5;
}

.container_width91 {
  position: relative;
  z-index:2;
}

.user_bg {
  position:absolute;
  top:0;
  z-index:1;
  width:100%;
  height:450rpx;
}

.head_module {
  display:flex;
  align-items:center;
  margin-top:340rpx;
}


.avatar .image {
  padding:20rpx;
  width:160rpx;
  height:160rpx;
  border-radius:50%;
  background-color:white;
  box-sizing:border-box;
}

.head_module .right {
  display:flex;
  flex-direction:column;
  justify-content:center;
  margin-left:30rpx;
}

.head_module .username {
  max-width:490rpx;
  height:50rpx;
  line-height:50rpx;
  font-size:40rpx;
  font-weight:normal;
  color:#111;
  letter-spacing: 2rpx;
}

.head_module .statistics {
  display:flex;
  align-items:center;
  justify-content: space-evenly;
  margin:10rpx 0 0 -8rpx;
  padding:10rpx 0;
  height:80rpx;
  width:440rpx;
  font-weight:500;
  font-size:28rpx;
  color:#666;
  text-align:center;
  background-color:white;
  box-sizing:border-box;
  /* border:1px solid rgba(50,50,50,0.2); */
}

.head_module .sta_item {
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content: center;
}

.head_module .statistics p {
  color:#999;
  font-size:22rpx;
}

.attention {
  margin-top:30rpx;
  width:100%;
  height:60rpx;
  line-height:60rpx;
  color:white;
  font-size:30rpx;
  text-align:center;
  background-color:#09BB07;
  border-radius:6rpx;
  box-sizing:border-box;
}

.attention.yes {
  color:#09BB07;
  border:1px solid #09BB07;
  background-color:white;
}

.profilelist_container {
  margin-top:30rpx;
  padding:20rpx 0 80rpx;
  min-height:200rpx;
  width:100%;
  background-color:white;
}

.edit_btn {
  margin-top:50rpx;
  height:60rpx;
  line-height:60rpx;
  font-size:30rpx;
  text-align:center;
  color:#353535;
  box-sizing:border-box;
  background-color:#DEDEDE;
}

