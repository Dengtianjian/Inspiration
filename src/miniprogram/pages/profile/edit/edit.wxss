/* pages/profile/edit.wxss */

page {
  background:#F5F5F5;
}

.container_width91 {
  position: relative;
  z-index:2;
}

/* 背景图片 */
.user_bgimage {
  display:flex;
  justify-content: center;
  position:absolute;
  top:0;
  z-index:1;
  width:100%;
  height:450rpx;
  overflow:hidden;
}
.user_bgimage .bg_image {
  width:100%;
  height:100%;
}
.user_chooseimage_mask {
  position:absolute;
  top:0;
  z-index:5;
  display:flex;
  justify-content: center;
  width:100%;
  height:350rpx;
  background:linear-gradient(to bottom,rgba(0,0,0,0.4) 30%,rgba(255,255,255,0));
}
.user_chooseimage_mask .tips {
  position:absolute;
  z-index:6;
  top:60rpx;
  width:60%;
  color:white;
  font-size:26rpx;
  text-align:center;
}

/* 头部区域 */
.head_module {
  display:flex;
  flex-direction:column;
  align-items:center;
  margin-top:340rpx;
}
.avatar {
  width:160rpx;
  height:160rpx;
  position:relative;
  overflow:hidden;
  border-radius:50%;
  border:5rpx solid white;
}
.avatar .image {
  width:160rpx;
  height:160rpx;
  border-radius:50%;
  background-color:white;
  box-sizing:border-box;
}
.avatar .avatar_selecte {
  position:absolute;
  bottom:0;
  padding:0 5rpx;
  font-size:20rpx;
  color:#FFF;
  text-align:center;
  background-color:rgba(50,50,50,0.4);
}
/* 统计 */
.head_module .statistics {
  display:flex;
  align-items:center;
  justify-content: space-evenly;
  margin:10rpx 0 0 -8rpx;
  padding:10rpx 0;
  height:80rpx;
  width:440rpx;
  font-weight:500;
  font-size:28rpx;
  color:#666;
  text-align:center;
  background-color:white;
  box-sizing:border-box;
  /* border:1px solid rgba(50,50,50,0.2); */
}
.head_module .sta_item {
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content: center;
}
.head_module .statistics p {
  color:#999;
  font-size:22rpx;
}

/* 关注按钮 */
.attention {
  margin-top:30rpx;
  width:100%;
  height:60rpx;
  line-height:60rpx;
  color:white;
  font-size:30rpx;
  text-align:center;
  background-color:#09BB07;
  border-radius:6rpx;
  box-sizing:border-box;
}
.attention.yes {
  color:#09BB07;
  border:1px solid #09BB07;
  background-color:white;
}

/* 表单区域 */
.profileForm_container {
  margin-top:30rpx;
  padding:20rpx 0 80rpx;
  min-height:200rpx;
  width:100%;
  background-color:white;
}
.profile_form input {
  width:95%;
}
.profile_form picker {
  width:95%;
}
.sex_radiogroup {
  display:flex;
}
.sex_radio_item p {
  display:flex;
  align-items:center;
  margin:20rpx 20rpx 20rpx 0;
}
.save_btn {
  margin-top:50rpx;
}

