<!--pages/login/login.wxml-->

<view class="login member_container">
  <view class="welcome_text">
    <view class="container_width91">
      <view class="light">Welcome to</view>
      <view class="name">Inspiration</view>
    </view>
  </view>
  <view class="container_width91">
    <view class="title_cus">
      <view class="main">Login</view>
      <navigator open-type="redirect" url="../register/register" class="sub">go to Register</navigator>
    </view>
    <form class="form topbottom_list">
      <view class="tb_item">
        <view class="tb_title">Username</view>
        <input type="text" class="tb_content" data-dataname="username" bindinput="bindData" placeholder="username / phone number /email" />
      </view>
      <view class="tb_item">
        <view class="tb_title">Password</view>
        <input type="text" class="tb_content" data-dataname="password" bindinput="bindData" placeholder="plase enter your password" />
      </view>
      <view class="login_other">
        <view class="getpassword">get password</view>
      </view>
      <view class="submit_btn" bindtap="login" >Submit</view>
    </form>
    <view class="third_party">
      <image src="/resource/wechat.png" class="wechat tp_item"></image>
      <navigator open-type="redirect" url="../show/show" >
        <image src="/resource/backhome.png" class="backhome tp_item"></image>
      </navigator>
    </view>
  </view>
</view>