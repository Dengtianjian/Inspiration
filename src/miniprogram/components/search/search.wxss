/* components/search/search.wxss */

.search {
  position:relative;
  z-index:3;
  margin-top:36rpx;
  width:100%;
  height:80rpx;
}

.search .form {
  display:flex;
  align-items:center;
  justify-content:space-between;
  padding:0 20rpx;
  height:inherit;
  width:inherit;
  font-size:32rpx;
  font-weight:normal;
  background:#F5F5F5;
  box-sizing:border-box;
}

.search .form .keyword {
  width:90%;
  text-overflow:ellipsis;
}

.search .icon {
  width:45rpx;
  height:45rpx;
}

/* 历史记录 */
.history {
  position:absolute;
  z-index:3;
  padding:14rpx;
  width:682rpx;
  height:auto;
  max-height:570rpx;
  background:#FFF;
  box-sizing:border-box;
  box-shadow:0 10rpx 20rpx rgba(50,50,50,0.4);
}

.history .his_item {
  display:flex;
  justify-content:space-between;
  padding-left:10rpx;
  margin-bottom:20rpx;
  width:100%;
  height:50rpx;
  line-height:50rpx;
  font-size:30rpx;
  font-weight:500;
  color:#666;
  overflow:hidden;
  box-sizing:border-box;
}

.history .his_item:last-child {
  margin-bottom:0;
}

.history .his_item .keyword {
  width:600rpx;
  height:50rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  color:#999;
}

.history .his_item .delete {
  display:flex;
  justify-content:center;
  align-items:center;
  width:50rpx;
  height:50rpx;
}

.history .his_item .delete_icon {
  width:30rpx;
  height:30rpx;
}