/* components/typesetting_editor/typesetting_editor.wxss */

@import "/app.wxss";

.add_area {
  margin:20rpx 0 ;
  padding:10rpx 0;
  height:30rpx;
  line-height:30rpx;
  text-align:center;
  font-size:20rpx;
  color:#888;
  border:1px dashed #09BB07;
  border-radius:6rpx;
}

.element_image {
  position:relative;
}

.element_image image {
  width:100%;
}

.element_image .image_operate {
  position:absolute;
  bottom:10rpx;
  left:0;
  display:flex;
  align-items:center;
  justify-content: space-between;
  width:100%;
  background:rgba(0,0,0,0.5);
}

.element_image .image_operate .operate_btn {
  width:50%;
  height:50rpx;
  line-height:50rpx;
  color:white;
  font-size:20rpx;
  text-align:center;
}

.element_textarea textarea {
  width:100%;
}

/* 添加选择窗口 */
.newele_type_win {
  position:fixed;
  z-index:2;
  top:0;
  left:0;
  right:0;
  margin:auto;
  width:100%;
  height:100%;
}
.win_mask {
  /* display:none; */
  position:absolute;
  z-index:1;
  top:0;
  left:0;
  right:0;
  margin:auto;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.6);
}
.newele_type_wrap {
  position:relative;
  z-index:6;
  display:flex;
  justify-content: center;
  margin-top:60%;
}
.newele_type_wrap .type_item {
  margin:0 30rpx;
  padding:30rpx;
  width:70rpx;
  height:70rpx;
  border-radius:50%;
  background:white;
}
.newele_type_wrap .type_item image {
  width:100%;
  height:100%;
}

/* 添加图片窗口 */
.add_newimage_win {
  position:absolute;
  z-index:2;
  top:0;
  left:0;
  right:0;
  margin:auto;
  width:100%;
  height:100%;
}

.newimage_wrap {
  position:fixed;
  top:100rpx;
  left:0;
  right:0;
  margin:auto;
  padding:20rpx;
  width:90%;
  height:auto;
  box-shadow:0 10rpx 30rpx rgba(0,0,0,0.2);
  background:white;
  box-sizing:border-box;
  overflow:hidden;
}

.newimage_wrap .preview {
  /* height:800rpx;
  overflow:scroll; */
}

.newimage_wrap .preview_empty {
  width:100%;
  min-height:200rpx;
  border:4rpx dashed #d2d2d2;
}

.newimage_wrap .preview image {
  width:100%;
}

.newimage_wrap .image_item {
  position:relative;
  margin-bottom:20rpx;
}

.newimage_wrap .operate_area {
  position:absolute;
  bottom:10rpx;
  left:0;
  display:flex;
  justify-content: space-around;
  align-items:center;
  width:100%;
  height:50rpx;
  overflow:hidden;
  background:rgba(0,0,0,0.4);
}

.newimage_wrap .operate_area .operate_item {
  width:50%;
  line-height:50rpx;
  text-align:center;
  color:white;
  font-size:30rpx;
}

.newimage_wrap .choose_image_btn {
  margin:20rpx 0 60rpx; 
}

.newimage_wrap .comfirm_button_area .button_item {
  line-height:80rpx;
}

.save_operate_btn {
  margin-top:60rpx;
}